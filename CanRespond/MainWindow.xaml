<Window x:Name="CanRespond" x:Class="CanRespond.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanRespond"
        mc:Ignorable="d"
        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
        ScrollViewer.VerticalScrollBarVisibility="Hidden"
        Title="CanRespond" Height="375" Width="800" FontFamily="Calibri"  Foreground="White" Background="#FF2D2D30" SizeToContent="WidthAndHeight" MinHeight="375" MinWidth="800" WindowStyle="ThreeDBorderWindow">
    <Grid Margin="0,0,0,0">
        <ListBox x:Name="TitleList" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Margin="0,25,0,25" SelectionChanged="TitleList_SelectionChanged" MouseDoubleClick="TitleList_MouseDoubleClick" Background="#FF2D2D30" FontFamily="Calibri" Foreground="White"/>
        <Menu HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Top" Background="White">
            <MenuItem x:Name="NewButton" Header="New Response" HorizontalAlignment="Left" Height="24" Width="100" Click="NewButton_Click"/>
            <MenuItem x:Name="DeleteButton" Header="Delete Response" Height="24" HorizontalAlignment="Left" Width="100" Click="DeleteButton_Click"/>
            <MenuItem x:Name="EditButton" Header="Edit Title" Height="24" HorizontalAlignment="Left" Width="100" Click="EditButton_Click"/>
        </Menu>
        <TextBox x:Name="ContentBox" HorizontalAlignment="Stretch" Margin="200,25,0,25" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch" SpellCheck.IsEnabled="True" FontFamily="Calibri" MouseDoubleClick="ContentBox_MouseDoubleClick" AcceptsReturn="True" IsReadOnly="True" KeyDown="ContentBox_KeyDown" Foreground="White">
            <TextBox.Background>
                <SolidColorBrush Color="#FF2D2D30"/>
            </TextBox.Background>
        </TextBox>
        <StatusBar x:Name="StatBar" HorizontalAlignment="Stretch" Height="25" Margin="0,0,0,0" VerticalAlignment="Bottom" Background="#FF007ACC">
            <StatusBarItem x:Name="StatusText" Content="Welcome to CanRespond!" Height="25" VerticalAlignment="Top" HorizontalContentAlignment="Right" BorderBrush="Black" Foreground="White"/>
        </StatusBar>

    </Grid>
</Window>
